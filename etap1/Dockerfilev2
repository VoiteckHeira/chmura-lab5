# Etap 1 - budowanie aplikacji
FROM node:alpine AS build

WORKDIR ./usr/app

COPY ./package.json ./

RUN npm install && \
    npm install --save dotenv && \
    rm -rf /tmp/*

COPY ./app.js ./
#----------------------------------------------

# Etap 2 - budowanie obrazu ko≈Ñcowego
FROM node:alpine AS app

ARG VERSION
ENV VERSION=${VERSION}

WORKDIR /usr/app

COPY --from=build ./usr/app ./

EXPOSE 8080

CMD ["npm", "start"]


